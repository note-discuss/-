<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/ScrollView" android:layout_width="fill_parent"   
     android:layout_height="fill_parent" >   
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEFF" >
    <RelativeLayout
        android:id="@+id/head2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请输入你的笔记内容"
            android:textStyle="bold"
            android:textColor="#FF33B5E6"
            android:textSize="21dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_input2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head2"
        
        android:layout_marginTop="10dip"
        
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="标题:"
            android:layout_gravity="start"
            
            android:gravity="left|center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            
            android:gravity="start"
            android:background="@drawable/shurukuang1"
            android:imeOptions="actionNext"
            android:lines="2"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_input2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_input2"
        
        android:layout_marginTop="10dip"
        >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="讨论纪要:"
            
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/note2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            
            android:gravity="start"
             android:background="@drawable/shurukuang1"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:lines="7" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/conclusion_input2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_input2"
        
        android:layout_marginTop="10dip" 
        >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="矛盾及结论:"
            
            android:gravity="left"
            android:layout_gravity="start"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/conclusion2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            
            android:gravity="start"
            android:background="@drawable/shurukuang1"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:lines="4" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/site_input2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conclusion_input2"
        
        android:layout_marginTop="10dip"
         >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="start"
            
            android:text="讨论地点:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/site2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            
            android:gravity="start"
            android:background="@drawable/shurukuang1"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:lines="2" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/member_input2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_input2"
        
        android:layout_marginTop="10dip"
         >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:text="成员:"
            
            android:gravity="left"
            android:layout_gravity="start"
            android:textColor="#000000" />

            <MultiAutoCompleteTextView
                android:id="@+id/member2"
                android:background="@drawable/shurukuang1"
                android:layout_width="fill_parent"  
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:lines="2"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/publishbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_input2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/publish2"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="18dip" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>