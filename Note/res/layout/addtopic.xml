<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEFF" >
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请输入你的笔记"
            android:textColor="#FF0000"
            android:textSize="21dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:baselineAligned="_baseline" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/title"
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shurukuang"
            android:imeOptions="actionNext"
            android:lines="2"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讨论纪要:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/note"
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shurukuang"
            android:imeOptions="actionDone"
            android:lines="5"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/conclusion_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="矛盾及结论:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/conclusion"
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/shurukuang"
            android:imeOptions="actionDone"
            android:lines="3"
            android:textColor="#000000" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/site_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conclusion_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讨论地点:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/site"
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:background="@drawable/shurukuang"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:lines="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/member_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成员:"
            android:textColor="#000000" />

            <MultiAutoCompleteTextView
                android:id="@+id/member"
                android:background="@drawable/shurukuang"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:lines="2"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/publishbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/publish"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="18dip" />

    </RelativeLayout>

</RelativeLayout>