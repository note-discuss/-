<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEFF" >

    <RelativeLayout
        android:id="@+id/re_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip" >

        <ImageView
            android:id="@+id/loginhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/faceback" />

        <ImageView
            android:id="@+id/loginhead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/shurukuang" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/id"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#000000"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <Button
            android:id="@+id/xiala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/expand" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_imput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/shurukuang" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/password"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:background="@null"
            android:imeOptions="actionDone"
            android:password="true"
            android:textColor="#000000"
            android:singleLine="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/expand"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_imput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/login"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="18dip" />

        <Button
            android:id="@+id/register"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:layout_toRightOf="@id/login"
            android:background="@drawable/button"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="18dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/option"
        android:layout_width="263dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <CheckBox
            android:id="@+id/remember"
            style="@drawable/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/remember"
            android:text="记住密码" />


    </RelativeLayout>



</RelativeLayout>