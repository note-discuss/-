<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/q">

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ff8c00"
        android:text="请修改个人信息"
        android:textSize="30dp"
        android:textStyle="bold" />   

  <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff8c00"
                android:id="@+id/but1"
                android:text="姓名" />

            <EditText
                android:id="@+id/b1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="" />
        </TableRow>



        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff8c00"
                android:id="@+id/but2"
                android:text="学号" />

            <EditText
                android:id="@+id/b2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="" />
        </TableRow>

        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff8c00"
                android:id="@+id/but3"
                android:text="密码" />

            <EditText
                android:id="@+id/b3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="" />
        </TableRow>
               
        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff8c00"
                android:id="@+id/but4"
                android:text="性别"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/b4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/b41"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/b42"
                    android:textColor="#f08080"
                    android:text="男" />

                <RadioButton
                    android:id="@id/b41"
                    android:textColor="#f08080"
                    android:text="女" />
            </RadioGroup>
        </TableRow>
        
        <TableRow >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff8c00"
                android:id="@+id/but5"
                android:text="类别"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/b5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/b51"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/b52"
                    android:textColor="#f08080"
                    android:text="教师" />

                <RadioButton
                    android:id="@id/b51"
                    android:textColor="#f08080"
                    android:text="学生" />
            </RadioGroup>
        </TableRow>

        <TableRow >

                <Button
                    android:id="@+id/makesure"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="确定" />
        </TableRow>
    </TableLayout>        
</LinearLayout>

